@model Fitness_First.Models.GymEquipments

@{
    ViewData["Title"] = "Add New Equipments";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<center><h1>Add New Equipment</h1></center>

<div class="container mt-4">
    <form method="post" asp-action="AddEquipmentsPostRequest" asp-controller="Admin" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="EquipmentName"></label>
            <input class="form-control" asp-for="EquipmentName" />
            <span asp-asp-validation-for="EquipmentName"></span>
        </div>

        <div class="form-group">
            <label asp-for="Quantity"></label>
            <div class="input-group">
                <input type="number" step="1" class="form-control" asp-for="Quantity" />
            </div>
            <span asp-validation-for="Quantity"></span>
        </div>

        <div class="form-group">
            <label asp-for="Availability"></label>
            <select class="form-control" asp-for="Availability">
                <option value="Available">Available</option>
                <option value="Out of Order">Out of Order</option>
                <option value="Coming Soon">Coming Soon</option>
            </select>
            <span asp-validation-for="Availability"></span>
        </div>

        <div class="form-group">
            <label asp-for="EquipmentPicturePath"></label>
            <input type="file" class="form-control-file" id="equipmentPicture" name="equipmentPicture" />
            <span asp-validation-for="EquipmentPicturePath"></span>
        </div>

        
        <center>
            <button type="submit" class="btn btn-primary">Add Equipment</button>
        </center>
    </form>
</div>