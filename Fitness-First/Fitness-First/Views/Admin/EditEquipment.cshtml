@model Fitness_First.Models.GymEquipments

@{
    ViewData["Title"] = "Edit Equipment Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .btn-container {
        display: flex;
        justify-content: space-between;
        padding: 30px 0;
    }
    
    .btn-container button {
            flex: 1;
    }

    .btn {
        width: 130px;
        height: 40px;
        font-size: 1em;
        margin-right: 30px; /* Adjust the spacing between buttons */
        margin-left: 30px; /* Adjust the spacing between buttons */
    }
</style>


<div class="container mt-4">
    <form method="post" asp-action="EditEquipmentPostRequest" asp-asp-controller="AdminController">
        @Html.HiddenFor(model => model.EquipmentID)
        <div class="form-group">
            <label asp-for="EquipmentName"></label>
            <input class="form-control" asp-for="EquipmentName" />
            <span asp-asp-validation-for="EquipmentName"></span>
        </div>

        <div class="form-group">
            <label asp-for="Quantity"></label>
            <div class="input-group">
                <input type="number" step="1" class="form-control" asp-for="Quantity" />
            </div>
            <span asp-validation-for="Quantity"></span>
        </div>

        <div class="form-group">
            <label asp-for="Availability"></label>
            <select class="form-control" asp-for="Availability">
                <option value="Available">Available</option>
                <option value="Out of Order">Out of Order</option>
                <option value="Coming Soon">Coming Soon</option>
            </select>
            <span asp-validation-for="Availability"></span>
        </div>

        <div class="form-group">
            <label asp-for="EquipmentPicturePath"></label>
            <input type="file" class="form-control-file" asp-for="EquipmentPicturePath" />
            <span asp-validation-for="EquipmentPicturePath"></span>
        </div>


        <center>
            <button type="submit" class="btn btn-success"><b>Save Changes</b></button>
            <button type="submit" name="deleteButton" value="delete" class="btn btn-danger"><b>Delete</b></button>
        </center>
    </form>
</div>