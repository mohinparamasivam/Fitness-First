@using Microsoft.AspNetCore.Identity
@using Fitness_First.Areas.Identity.Data

@inject SignInManager<Fitness_FirstUser> SignInManager
@inject UserManager<Fitness_FirstUser> UserManager
<link rel="stylesheet" href="~/css/site.css">

<div class="login-partial-container">
    <ul class="navbar-nav ml-auto">
        <!-- Use ml-auto to push links to the right -->
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a id="cart" class="nav-link text-dark" href="/Cart">
                    <img src="~/images/cart.png" alt="Cart Icon" width="30" height="30" />
                </a>
            </li>
            <li class="nav-item">
                <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        }
    </ul>
</div>
